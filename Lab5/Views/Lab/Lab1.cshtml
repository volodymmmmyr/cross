@{
    ViewBag.Title = "Lab1";
}

<h2>Результат</h2>

<form method="post" asp-action="Lab1Run">
    <label for="inputValue">Введіть вхідні дані:</label>
    <input type="text" id="inputValue" name="inputValue" />

    <button type="submit">Розрахувати</button>
</form>

@if (ViewBag.Result != null)
{
    <p>
        <label>Результат: </label>
        <span>@ViewBag.Result</span>
    </p>
}
